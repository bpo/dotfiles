[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    st = status
    ci = commit
    co = checkout

    l = log --graph --oneline
    diff = diff --word-diff

    # summary statistics
    lstat = log --stat --summary
    ss = diff --shortstat
    fs = diff --stat

    # svn interaction
    spull = !git-svn fetch && git-svn rebase
    spush = !git-svn dcommit
